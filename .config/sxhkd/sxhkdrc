#
# Volume
#
XF86AudioRaiseVolume
	amixer sset 'Master' 10%+ && update-dwm-status-bar
XF86AudioLowerVolume
	amixer sset 'Master' 10%- && update-dwm-status-bar
XF86AudioMute
        amixer sset 'Master' 0% && update-dwm-status-bar
alt + ctrl + i
	amixer sset 'Master' 10%+ && update-dwm-status-bar
alt + ctrl + d
	amixer sset 'Master' 10%- && update-dwm-status-bar
alt + ctrl + m
        amixer sset 'Master' 0% && update-dwm-status-bar

#
# Screenshots
#
alt + ctrl + s
	maim --hidecursor -s ~/Pictures/Screenshots/screenshot-$(date +%H:%M:%S).png
alt + ctrl + p
	maim --hidecursor ~/Pictures/Screenshots/screenshot-$(date +%H:%M:%S).png

#
# Brightness
#
XF86MonBrightnessUp
	brightnessctl set 10%+ && update-dwm-status-bar
XF86MonBrightnessDown
	brightnessctl set 10%- && update-dwm-status-bar

#
# Screen lock
#
alt + Escape
	slock


#
# Emacs
#
alt + ctrl + e
	alacritty --command emacs
