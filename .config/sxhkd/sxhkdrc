#
# Volume
#
XF86AudioRaiseVolume
	amixer sset 'Master' 10%+ && set-status-bar
XF86AudioLowerVolume
	amixer sset 'Master' 10%- && set-status-bar
XF86AudioMute
  amixer sset 'Master' 0% && set-status-bar
alt + {ctrl,shift} + i
	amixer sset 'Master' 10%+ && set-status-bar
alt + {ctrl,shift} + d
	amixer sset 'Master' 10%- && set-status-bar
# alt + {ctrl,shift} + m
#   amixer sset 'Master' 0% && set-status-bar

#
# Screenshots
#
alt + ctrl + s
	maim --hidecursor -s ~/Pictures/Screenshots/screenshot-$(date +%H:%M:%S).png
alt + ctrl + p
	maim --hidecursor ~/Pictures/Screenshots/screenshot-$(date +%H:%M:%S).png

#
# Brightness
#
XF86MonBrightnessUp
	brightnessctl set 10%+
XF86MonBrightnessDown
	brightnessctl set 10%-

#
# Screen lock
#
alt + Escape
	slock


#
# Neovim
#
alt + ctrl + n
	alacritty --class nvim --command nvim


#
# Pulsemixer
# --class pulsemixer is used to float the window in dwm
#
alt + {ctrl,shift} + m
	alacritty --class pulsemixer --command pulsemixer


#
# Boot session [full]
#
alt + ctrl + b
	boot-session-full
