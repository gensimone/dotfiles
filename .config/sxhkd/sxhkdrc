#
# Volume
#
XF86AudioRaiseVolume
	amixer sset 'Master' 10%+
XF86AudioLowerVolume
	amixer sset 'Master' 10%-
XF86AudioMute
        amixer sset 'Master' 0%
alt + ctrl + i
	amixer sset 'Master' 10%+
alt + ctrl + d
	amixer sset 'Master' 10%-
alt + ctrl + m
        amixer sset 'Master' 0%

#
# Screenshots
#
alt + ctrl + s
	maim --hidecursor -s ~/Pictures/Screenshots/screenshot-$(date +%H:%M:%S).png
alt + ctrl + p
	maim --hidecursor ~/Pictures/Screenshots/screenshot-$(date +%H:%M:%S).png

#
# Brightness
#
XF86MonBrightnessUp
	brightnessctl set 10%+
XF86MonBrightnessDown
	brightnessctl set 10%-

#
# Screen lock
#
alt + Escape
	slock


#
# Emacs
#
alt + ctrl + e
	alacritty --class emacs --command emacsclient -c -a ''


#
# Pulsemixer
# --class pulsemixer is used to float the window in dwm
#
alt + shift + m
	alacritty --class pulsemixer --command pulsemixer


#
# Boot session [full]
#
alt + ctrl + b
	boot-session-full
